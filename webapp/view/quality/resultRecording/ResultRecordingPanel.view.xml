<mvc:View
	controllerName="tronox.controller.quality.resultRecording.ResultRecordingPanel"
	xmlns="sap.m"
  xmlns:fb="sap.ui.comp.filterbar"
	xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core"
  xmlns:tnt="sap.tnt"
	xmlns:smartForm="sap.ui.comp.smartform"
	xmlns:smartField="sap.ui.comp.smartfield"
  xmlns:fiori="sap.ui.webc.fiori"
  xmlns:l="sap.ui.layout"
  >
	<Page
		id="configurationsListPage"
		title="{i18n>qualityDescription} | {i18n>resultsRecordingTitle}"
		showNavButton="true"
		navButtonPress=".onNavBack"
		class="sapUiResponsiveContentPadding"
    showHeader="true"
    enableScrolling="true"
  >
    <tnt:ToolHeader>
      <Label class="sapUiTinyMarginBegin sapUiTinyMarginEnd tileLayout" text="{i18n>Plant}" labelFor="wkInput" />
      <tnt:ToolHeaderUtilitySeparator />
      <ToolbarSpacer>
        <layoutData>
          <OverflowToolbarLayoutData minWidth="50px" />
        </layoutData>
      </ToolbarSpacer>
      <Label class="sapUiTinyMarginEnd tileLayout" text="Work Center: " />
      <ComboBox items="{ path: '/', sorter: { path: 'text' } }" change="onChange" width="350px">
        <core:Item key="{ID_WORK_CENTE}" text="{ID_WORK_CENTE} | {DS_WORK_CENTE}" />
      </ComboBox>
    </tnt:ToolHeader>

    <content>
      <fb:FilterBar 
        id="filBarId" 
        search="onSearch" 
        showRestoreButton="false" 
        showClearButton="true" 
        showFilterConfiguration="false"
        useToolbar="false" 
        showGoOnFB="true"
      >
      <fb:filterGroupItems>          
        <fb:FilterGroupItem name="material" label="{i18n>material}" groupName="main" visibleInFilterBar="true">
          <fb:control>
            <MultiComboBox id="materialComboBox" selectionChange="onMaterialComboBoxChange" items="{ path: '/mtsd',templateShareable: true }"> 
              <core:Item key="-1" text="Seleccionar..."/>
            </MultiComboBox>
          </fb:control>
        </fb:FilterGroupItem>
      
        <fb:FilterGroupItem name="materialInput" label="{i18n>material}" groupName="main" visibleInFilterBar="true">
          <fb:control>
            <Label text="{i18n>materialInput}" labelFor="input-material" />
            <Input id="input-material" valueChange="onMaterialInputChange" />
          </fb:control>
        </fb:FilterGroupItem>
      
        <fb:FilterGroupItem name="batch" label="{i18n>batch}" groupName="main" visibleInFilterBar="true">
          <fb:control>
            <MultiComboBox id="batchComboBox" selectionChange="onBatchComboBoxChange" items="{ path: '/batchs',templateShareable: true }">
              <core:Item key="-1" text="Seleccionar..."/>
            </MultiComboBox>
          </fb:control>
        </fb:FilterGroupItem>
      
        <fb:FilterGroupItem name="batchInput" label="{i18n>batch}" groupName="main" visibleInFilterBar="true">
          <fb:control>
            <Label text="{i18n>batchInput}" labelFor="input-batch" />
            <Input id="input-batch" valueChange="onBatchInputChange" />
          </fb:control>
        </fb:FilterGroupItem>
      
        <fb:FilterGroupItem name="dateInit" label="{i18n>dateStart}" groupName="main" visibleInFilterBar="true">
          <fb:control>
            <DateTimePicker
              placeholder="{i18n>placeDate}"
              id="dateInit" 
              change="onDateInitChange"
              class="sapUiSmallMarginEnd"
              value="{/dateInit}"                
              />
          </fb:control>
        </fb:FilterGroupItem>
      
        <fb:FilterGroupItem name="dateEnd" label="{i18n>dateEnd}" groupName="main" visibleInFilterBar="true">
          <fb:control>
            <DateTimePicker
              placeholder="{i18n>placeDate}"
              id="dateEnd" 
              change="onDateEndChange"
              class="sapUiSmallMarginEnd"
              value="{/dateEnd}"    
              />
          </fb:control>
        </fb:FilterGroupItem>
      </fb:filterGroupItems>
      

      </fb:FilterBar>
    </content>  
    
	</Page>
</mvc:View>