        <Button text="{i18n>buttonUpdate}" press="" type="Accept" />
        <Button text="{i18n>buttonDelete}" press="" type="Reject"/>
        <Button text="{i18n>buttonCancel}" press="" />
      </FlexBox>
    </content>
  </Toolbar> -->
</core:FragmentDefinition>
